.string
  display flex
  align-items center
  flex 1
  height 40px

  .string-segment
    display inline-block
    flex 1
    height 40px
    background linear-gradient(transparent 18px, #ddd 18px, #ddd 22px, transparent 22px)

    &:hover
      cursor pointer
      background linear-gradient(transparent 18px, #fc7e1099 18px, #fc7e1099 22px, transparent 22px)

    &::after
      content ""
      display block
      height 40px
      width 1px
      background-color #ddd
      float right
      margin-top 20px

    &:first-child::after
      width 4px

  .string-segment-note
    display inline-block
    width 30px
    height 30px
    line-height 30px
    background-color #ddd
    border-radius 50%
    font-size 13px
    margin-top 5px

    &.is-do
      background-color #fc7e10
      color #fff

.string.is-sixth .string-segment::after
  height 0